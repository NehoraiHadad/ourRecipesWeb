BOT_TOKEN="1234567890:ABCdefGHIjklMNOpqrsTUVwxyz"  # Your bot token from @BotFather

# Telegram Channel Configuration
CHANNEL_URL="https://t.me/+channelInviteHash"  # Current channel invite link
OLD_CHANNEL_URL="https://t.me/+oldChannelInviteHash"  # Previous channel invite link (if exists)

# Security
SECRET_JWT="your_jwt_secret_key"  # Random string for JWT encryption (use: openssl rand -base64 32)

# Google Drive Configuration
GOOGLE_API_KEY="your_google_api_key"  # Google API key for basic integration
GOOGLE_CLIENT_ID="your_client_id.apps.googleusercontent.com"  # OAuth 2.0 Client ID
GOOGLE_CLIENT_SECRET="your_client_secret"  # OAuth 2.0 Client Secret
GOOGLE_DRIVE_TOKEN="your_refresh_token"  # Refresh token from OAuth flow
GOOGLE_DRIVE_REFRESH_TOKEN="your_refresh_token"  # Refresh token from OAuth flow

# Google Drive File IDs
SESSION_FILE_1_ID="your_session_file_1_id"  # ID of the first session file in Google Drive
SESSION_FILE_2_ID="your_session_file_2_id"  # ID of the second session file in Google Drive
ENV_FILE_ID="your_env_file_id"  # ID of the .env file in Google Drive

# API Keys
OPENAI_API_KEY="sk-..."  # Your OpenAI API key
HF_TOKEN="Bearer hf_..."  # HuggingFace API token

# CORS & Server Configuration
ORIGIN_CORS="http://localhost:3000"  # Frontend URL for CORS (development)
# ORIGIN_CORS="https://your-production-domain.com"  # Frontend URL for CORS (production)

# Optional Development Settings
FLASK_DEBUG=1  # Set to 1 for development, 0 for production
FLASK_APP=ourRecipesBack  # Flask application name 