# Telegram API Credentials
# Get these from https://my.telegram.org/apps
SESSION_STRING=your_telegram_session_string_here
API_ID=12345678
API_HASH=your_api_hash_here

# Telegram Channel
# Format: https://t.me/your_channel or username
CHANNEL_URL=https://t.me/your_channel

# Optional: Old channel for monitoring/migration
# Leave empty if not using background monitoring
OLD_CHANNEL_URL=
NEW_CHANNEL_URL=

# Security Secrets
# Generate random secure strings for these
TELEGRAM_SERVICE_SECRET=your_random_secret_for_nextjs_auth
WEBHOOK_SECRET=your_random_secret_for_hmac_signatures

# Next.js Integration
# URL where Next.js app is hosted
NEXTJS_URL=https://your-app.vercel.app

# Server Configuration
PORT=8000
ENVIRONMENT=production
LOG_LEVEL=info

# Notes:
# - SESSION_STRING: Generate using Telethon's StringSession
# - API_ID & API_HASH: Get from https://my.telegram.org/apps
# - TELEGRAM_SERVICE_SECRET: Used for Bearer token auth (Next.js → Python)
# - WEBHOOK_SECRET: Used for HMAC signatures (Python → Next.js)
# - Both secrets should be random, secure strings (use `openssl rand -hex 32`)
